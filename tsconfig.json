{
  "compilerOptions": {
    "target": "es2021",                              
    "module": "NodeNext",                            
    "outDir": "./dist",                              
    "allowSyntheticDefaultImports": false,            
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true,
    "rootDir": "src"                        
  }
}
